    
# Uncomment this line to define a global platform for your project
platform :ios, '8.0'

target '成长之路APP-Swift' do
# Uncomment this line if you're using Swift or would like to use dynamic frameworks
 use_frameworks!

pod 'SnapKit'            ,'4.0.0'             #布局  自动布局框架，类似于Masonry
pod 'Alamofire'          ,'4.5.1'             #网络请求  AFNetworking络基础库 Swift语言版
pod 'SwiftyJSON'         ,'3.1.4'             #处理JSON数据 GitHub上最为开发者认可的JSON解析类
pod 'SDWebImage'          ,'4.0.0'            #图片缓存处理 支持Swift版本
pod 'ObjectMapper'        ,'3.0.0'            #字典转模型框架
pod 'PullToRefreshKit'    ,'0.7.0'            #下拉刷新  多种刷新样式
pod 'SDCycleScrollView'   ,'1.73'             #轮播图
pod 'DZNEmptyDataSet'     ,'1.8.1'            #空页面展示效果

end


